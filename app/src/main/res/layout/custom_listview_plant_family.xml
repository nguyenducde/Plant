<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_listview_plant_family_background"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:alpha="0.36"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blechnum" />

    <TextView
        android:id="@+id/txt_listview_plant_family_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="HỌ DẦU"
        android:textAlignment="center"
        android:textColor="#1B1B1B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/img_listview_plant_family_background"
        app:layout_constraintTop_toTopOf="@+id/img_listview_plant_family_background" />

    <TextView
        android:id="@+id/txt_listview_plant_family_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dipterocarpaceae Blume, 1825"
        android:textAlignment="center"
        android:textColor="#1B1B1B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_listview_plant_family_name"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/txt_listview_plant_family_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_listview_plant_family_name"
        app:layout_constraintWidth_percent=".7" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/txt_listview_plant_family_num_genus"
        app:layout_constraintTop_toTopOf="@+id/img_listview_plant_family_background"
        app:srcCompat="@drawable/icon_species1" />

    <TextView
        android:id="@+id/txt_listview_plant_family_num_genus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="6"
        android:textAlignment="center"
        android:textColor="#1B1B1B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_listview_plant_family_background"
        app:layout_constraintTop_toTopOf="@+id/img_listview_plant_family_background" />

</androidx.constraintlayout.widget.ConstraintLayout>