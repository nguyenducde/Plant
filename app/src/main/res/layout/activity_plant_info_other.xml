<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantInfoOther">

    <ImageView
        android:id="@+id/img_OtherInfo_Detail"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_OtherInfo_Other"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_plant_info" />

    <TextView
        android:id="@+id/txt_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="lactuca runcinata"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Name" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bồ Công Anh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_OtherInfo_Flower"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_flower" />

    <ImageView
        android:id="@+id/img_OtherInfo_Leaf"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_OtherInfo_Flower"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_leaf" />

    <ImageView
        android:id="@+id/img_OtherInfo_Other"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_OtherInfo_Fruit"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_other_hover" />

    <ImageView
        android:id="@+id/img_OtherInfo_Fruit"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_OtherInfo_Leaf"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_fruit" />

</androidx.constraintlayout.widget.ConstraintLayout>