<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantInfoFlower">

    <TextView
        android:id="@+id/txt_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="lactuca runcinata"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Name" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bồ công anh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_FlowerInfo_Flower"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/icon_flower_hover" />

    <ImageView
        android:id="@+id/img_FlowerInfo_Leaf"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_FlowerInfo_Flower"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/icon_leaf" />

    <ImageView
        android:id="@+id/img_FlowerInfo_Other"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_FlowerInfo_Fruit"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:layout_constraintWidth_percent="0.33"
        app:srcCompat="@drawable/icon_other" />

    <ImageView
        android:id="@+id/img_FlowerInfo_Fruit"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_FlowerInfo_Leaf"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_fruit" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_FlowerInfo_Flower"
        app:layout_constraintWidth_percent=".32"
        app:srcCompat="@drawable/dandelion_flower" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/img_FlowerInfo_Flower"
        app:layout_constraintWidth_percent=".32"
        app:srcCompat="@drawable/dandelion_flower1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/img_FlowerInfo_Flower"
        app:layout_constraintWidth_percent=".32"
        app:srcCompat="@drawable/dandelion_flower2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintWidth_percent=".32"
        app:srcCompat="@drawable/dandelion_flower3" />

    <ImageView
        android:id="@+id/img_FlowerInfo_Detail"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_FlowerInfo_Other"
        app:layout_constraintTop_toBottomOf="@+id/txt_Description"
        app:srcCompat="@drawable/icon_plant_info" />
</androidx.constraintlayout.widget.ConstraintLayout>